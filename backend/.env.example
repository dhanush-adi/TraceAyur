# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Hyperledger Fabric Configuration
FABRIC_NETWORK_PATH=../test-network
FABRIC_CHANNEL=mychannel
FABRIC_CONTRACT=herbTrace
FABRIC_ORG=Org1MSP
FABRIC_USER=appUser

# Database (if using external database)
DATABASE_URL=mongodb://localhost:27017/traceayur

# JWT Secret for authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# External Service APIs
SMS_GATEWAY_URL=https://api.smsgateway.com
SMS_API_KEY=your-sms-api-key

# Firebase Admin SDK (if using Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_PATH=./serviceAccountKey.json

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# External Integration URLs
ERP_WEBHOOK_URL=https://your-erp-system.com/webhook
QMS_API_URL=https://your-qms-system.com/api

# Blockchain Network Monitoring
BLOCKCHAIN_MONITOR_INTERVAL=30000
BLOCKCHAIN_HEALTH_CHECK_URL=http://localhost:7051/health